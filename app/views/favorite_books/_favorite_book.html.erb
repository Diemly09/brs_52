<% if current_user.favorite book %>
  <%= link_to favorite_book_path(current_user.favorite(book)),
    method: :delete, remote: true, title: t("books.actions.unfavorite") do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
  <% end %>
<% else %>
  <%= link_to favorite_books_path(book_id: book.id),
    method: :post, remote: true, title: t("books.actions.favorite") do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
  <% end %>
<% end %>
