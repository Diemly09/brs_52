<%= provide :title, t("books") %>
<h1><%= t "all_book" %></h1>
<div class="col-md-offset-1 listButton">
  <%= link_to t("add_book"),  new_admins_book_path, class: "btn btn-primary" %>
</div></br>

<div class="container">
  <div class="card">
    <div class="col-md-12">
      <% @books.each do |book| %>
        <div class="col-md-4">
          <%= book_image book %>
          <h5><%= link_to book.title, admins_book_path(book) %></h5>
          <%= book.author %>
        </div>
      <% end %>
    </div>
  </div>
</div>
