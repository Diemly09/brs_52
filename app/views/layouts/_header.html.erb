<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container">
    <%= link_to t("title_page"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("categories.category"), admin_categories_path %></li>
          <% else %>
            <li><%= link_to t("books.my_book"), books_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("logout"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_in"), new_session_path(:user) %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
