<a href="#" class="dropdown-toggle" id="notifications-number" data-toggle="dropdown">
  <i class="fa fa-bell-o"></i>
  <% if user.seen_noti? %>
    <span class="label label-warning number-noti">
      <%= user.number_noti %>
    </span>
  <% end %>
</a>
<ul class="dropdown-menu">
  <li class="header" id="notifications"></li>
  <li>
    <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 200px;">
      <ul class="menu" style="overflow: hidden; width: 100%; height: 200px;">
        <% user.notifications.order(created_at: :desc).limit(10).each do |notification| %>
          <li>
            <%= display_notification notification %>
          </li>
        <% end %>
      </ul>
    <div class="slimScrollBar" style="background: rgb(0, 0, 0); width: 3px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px;"></div><div class="slimScrollRail" style="width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(51, 51, 51); opacity: 0.2; z-index: 90; right: 1px;"></div></div>
  </li>
  <li class="footer">
    <%= link_to t("buttons.view_all"), notifications_path %>
  </li>
</ul>
