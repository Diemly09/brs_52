<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="title">
      <%= t "notifications.titles.all" %>
    </h3>
  </div>

  <div class="box-body">
    <table class="table table-border">
      <tbody>
        <% @notifications.each do |notification| %>
          <tr>
            <td>
              <%= display_notification notification %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
